# .env.ci - CI-only environment variables (safe to commit)
# Used by GitHub Actions for automated testing and builds

# Node environment
NODE_ENV=test
CI=true

# Database (local SQLite file for CI)
DATABASE_URL="file:./prisma/dev.ci.db"

# Auth & Security (dummy but valid - 32+ characters required)
JWT_SECRET="00000000000000000000000000000000"
ALLOWED_ORIGINS="http://localhost:3000"

# Feature Flags (all disabled for CI)
AUTO_ASSIGN_ENABLED="false"
INBOUND_EMAIL_ENABLED="false"
ENABLE_PUBLIC_REGISTRATION="false"

# AI Provider (anthropic uses stub/mock in tests)
AI_PROVIDER="anthropic"
ANTHROPIC_API_KEY="ci-dummy-key"
OPENAI_API_KEY="ci-dummy-key"

# Email Provider (smtp with dummy values - no actual emails sent in CI)
EMAIL_PROVIDER="smtp"
SMTP_HOST="localhost"
SMTP_PORT="587"
SMTP_USER="ci-test@example.com"
SMTP_PASS="ci-dummy-password"

# Webhook Secrets (dummy values for CI)
N8N_WEBHOOK_SECRET="ci-webhook-secret"
GRAPH_WEBHOOK_SECRET="ci-graph-secret"

# Microsoft Graph (dummy values)
GRAPH_TENANT_ID="ci-tenant-id"
GRAPH_CLIENT_ID="ci-client-id"
GRAPH_CLIENT_SECRET="ci-client-secret"
