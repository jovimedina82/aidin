# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/aidin?sslmode=require"

# Application Configuration
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
JWT_SECRET="your-secure-jwt-secret-key-min-64-chars-use-openssl-rand-hex-64"
NODE_ENV="development"

# Security Configuration
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"
CSRF_PROTECTION_ENABLED="true"
ENABLE_DEBUG_ENDPOINTS="false"

# Logging Configuration
LOG_LEVEL="info"

# Feature Flags
AUTO_ASSIGN_ENABLED="false"
INBOUND_EMAIL_ENABLED="false"
ENABLE_PUBLIC_REGISTRATION="false"
DEV_LOGIN_ENABLED="false"

# Webhook Secrets (MUST be >=32 characters, generate with: openssl rand -hex 32)
N8N_WEBHOOK_SECRET="your-n8n-webhook-secret-here-min-32-chars"
GRAPH_WEBHOOK_SECRET="your-graph-webhook-secret-here-min-32-chars"
REPLY_WEBHOOK_SECRET="your-reply-webhook-secret-here-min-32-chars"

# AI Provider Configuration
AI_PROVIDER="openai"
OPENAI_API_KEY="your-openai-api-key-here"
ANTHROPIC_API_KEY="your-anthropic-api-key-here"

# Email Provider Configuration
EMAIL_PROVIDER="smtp"
SMTP_HOST="smtp.yourprovider.com"
SMTP_PORT="587"
SMTP_USER="your-email-username"
SMTP_PASS="your-email-password"

# Microsoft Azure Configuration (Optional - for SSO)
AZURE_CLIENT_ID="your-azure-client-id"
AZURE_CLIENT_SECRET="your-azure-client-secret"
AZURE_TENANT_ID="your-azure-tenant-id"

# Microsoft Graph (for email integration)
GRAPH_TENANT_ID="your-graph-tenant-id"
GRAPH_CLIENT_ID="your-graph-client-id"
GRAPH_CLIENT_SECRET="your-graph-client-secret"