# Database Configuration
DATABASE_URL="file:./dev.db"

# Application Configuration
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
JWT_SECRET="your-secure-jwt-secret-key-min-32-chars-required"
NODE_ENV="development"

# Security Configuration
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Feature Flags
AUTO_ASSIGN_ENABLED="false"
INBOUND_EMAIL_ENABLED="false"
ENABLE_PUBLIC_REGISTRATION="false"

# Webhook Secrets
N8N_WEBHOOK_SECRET="your-n8n-webhook-secret-here"
GRAPH_WEBHOOK_SECRET="your-graph-webhook-secret-here"

# AI Provider Configuration
AI_PROVIDER="openai"
OPENAI_API_KEY="your-openai-api-key-here"
ANTHROPIC_API_KEY="your-anthropic-api-key-here"

# Email Provider Configuration
EMAIL_PROVIDER="smtp"
SMTP_HOST="smtp.yourprovider.com"
SMTP_PORT="587"
SMTP_USER="your-email-username"
SMTP_PASS="your-email-password"

# Microsoft Azure Configuration (Optional - for SSO)
AZURE_CLIENT_ID="your-azure-client-id"
AZURE_CLIENT_SECRET="your-azure-client-secret"
AZURE_TENANT_ID="your-azure-tenant-id"

# Microsoft Graph (for email integration)
GRAPH_TENANT_ID="your-graph-tenant-id"
GRAPH_CLIENT_ID="your-graph-client-id"
GRAPH_CLIENT_SECRET="your-graph-client-secret"